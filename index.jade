doctype html
html
    head
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(href='https://s3.amazonaws.com/codecademy-content/projects/bootstrap.min.css', rel='stylesheet')
        link(href='css/main.css', rel='stylesheet')
        // Include the AngularJS library
        script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.3.5/angular.min.js')
    body(ng-app='ForecastApp')
        .main(ng-controller='MainController')
            .container
                .row
                    .col-sm-5.col-sm-offset-7
                        h1 {{ fiveDay.city_name }}
                        h2 5-day forecast
                        .forecast(ng-repeat='day in fiveDay.days')
                            .day.row
                                .weekday.col-md-4
                                    p {{ day.datetime | date }}
                                .weather.col-md-3
                                    img(ng-src='{{ day.icon }}')
                                .weather.col-md-1
                                .high.col-md-2
                                    p {{ day.high }}&deg;
                                .low.col-md-2
                                    p {{ day.low }}&deg;
        // Modules
        script(src='js/app.js')
        // Controllers
        script(src='js/controllers/MainController.js')
        // Services
        script(src='js/services/forecast.js')
        // Directives
